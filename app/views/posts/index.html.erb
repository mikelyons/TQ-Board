

<% @posts.each do |post| %>
		<article> 
			<header>
				<h4><%= post.title %></h4>
				by: <%= post.name %>

				<p><%= post.content %></p>
				<%= link_to ' : ', post %>
				<%= link_to ' ? ', edit_post_path(post) %>
				<%= link_to ' x ', post, :confirm => 'Are you sure?', :method => :delete %>
			</header>
		</article>
<% end %>

<br />

<%= link_to 'New Post', new_post_path %>
